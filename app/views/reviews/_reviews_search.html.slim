        = f.radio_button 'music_score_gteq', '',{:checked => true}
        |  指定なし
        = f.radio_button 'music_score_gteq', '5.0'
        |  5点以上
        = f.radio_button 'music_score_gteq', '4.0'
        |  4点以上
        = f.radio_button 'music_score_gteq', '3.0'
        |  3点以上
      p
        = f.label :body_cont, 'キーワード', class:"mr-2 font-weight-bold"
        = f.search_field :body_cont
      div.text-center.mb-4
        = f.submit class:"btn btn-info rounded-pill"